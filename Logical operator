public class Hello1 {
    public static void main(String[] args) {
        boolean icecream= true;
        boolean hungry = true;
        if(icecream && hungry){
            System.out.print("EAT");
        }
        else{
            System.out.print("DONT EAT");
        }
      
    }
    
}

