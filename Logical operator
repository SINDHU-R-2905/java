public class Hello1 {
    public static void main(String[] args) {
        boolean cricket= true;
        boolean football = true;
        if(cricket || football){
            System.out.print("PLAY");
        }
        else{
            System.out.print("DONT PLAY");
        }
      
    }
    
}

